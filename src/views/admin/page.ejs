<%- include ('../layouts/adminHeader'); -%>
<h2 class="page-title">Pages</h2>
<a href="/api/page/add-page" class="btn btn-primary">Go To add pages</a>
<br>
<table class="table table-striped sorting">

    <thead>
        <tr class="home">
            <th>Title</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% pages.forEach(function(page){ %>
        <tr id="id_<%= page._id %>" class="<%= page.slug %>">
            <td><%= page.title %></td>
            <td><a href="/api/page/edit-page/<%= page._id %>">Edit</a></td>
            <% if (page.slug == "home") { %>
            <td></td>
            <% }  else {%>
            <td><a class="confirmDeletion" href="/api/page/delete-page/<%= page._id %>">Delete</a></td>
            <% }%>
        </tr>
        <% }); %>
    </tbody>
</table>
<%- include ('../layouts/adminFooter'); -%>